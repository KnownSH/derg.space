<style lang="less" is:inline>
  .rjsf {
    margin: 0 20%;
  }

  legend {
    font-size: x-large;
    font-family: "silkscreen", sans-serif;
    font-weight: bold;
  }

  .control-label {
    font-family: "silkscreen", sans-serif;
    padding-right: 0.5rem;
  }

  .form-group {
